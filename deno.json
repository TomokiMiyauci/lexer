  "lint": {
    "files": {
      "exclude": ["npm", "CHANGELOG.md", "CODE_OF_CONDUCT.md"]
    }
  },
  "test": {
    "files": {
      "exclude": ["npm", "CHANGELOG.md", "CODE_OF_CONDUCT.md"]
    }
  },
  "importMap": "_test_import_map.json"
}
