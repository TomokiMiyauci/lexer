{
  "tasks": {
    "test": "deno test --doc",
    "coverage": "deno coverage",
    "bench": "deno bench --allow-read --unstable"
  },
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
